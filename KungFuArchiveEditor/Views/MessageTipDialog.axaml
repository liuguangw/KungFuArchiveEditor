<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:KungFuArchiveEditor.ViewModels"
        mc:Ignorable="d" Width="480" Height="260"
        x:Class="KungFuArchiveEditor.Views.MessageTipDialog"
        x:DataType="vm:MessageTipViewModel"
        WindowStartupLocation="CenterOwner" CanResize="False"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}">
    <TextBlock Foreground="{Binding TextColor}" Text="{Binding Message}"
               TextWrapping="Wrap" Margin="5"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
</Window>
